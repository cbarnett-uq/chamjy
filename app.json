{
  "expo": {
    "name": "Conductify",
    "slug": "Conductify",
    "version": "1.0.0",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "requireFullScreen": true,
      "supportsTablet": true,
      "usesIcloudStorage": true,
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to detect hand gestures as input.",
        "UIBackgroundModes": [
          "audio"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.chamjy.conductify"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
